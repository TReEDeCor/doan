@model TReEDeCor.Models.SANPHAM

@{ ViewBag.Title = "Thêm Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<style>
    .form-group {
        width: 100%;
        margin-bottom: 26px;
       
    }

    h2 {
        padding-top: 50px;
        text-align: center;
        color: peru;
    }

    h4 {
        text-align: center;
    }

    .form-group .btn {
        color: #ffffff;
        background: peru;
        padding: 5px;
        border: 1px solid rgba(0,0,0,0.3);
        width: 177px;
        height: 41px;
    }

        .form-group .btn:hover {
            color: #000;
            background: #808080;
            border: 1px solid rgba(0,0,0,0.3);
            width: 177px;
            height: 41px;
        }

    .form-horizontal {
        width: 100%;
        table-layout: fixed;
        padding-left: 50px;
        padding-right: 50px;
    }

    .tbl-content {
        height: 475px;
        overflow-y: scroll;
        margin-top: 1px;
        border: 1px solid rgba(223, 184, 145, 0.3);
    }

    section .toan {
        margin: 0px;
        background: -webkit-linear-gradient(left, rgb(243, 243, 243), #fff);
        background: linear-gradient(to right, rgb(246, 247, 246), #fff);
        font-family: 'Roboto', sans-serif;
    }

    .duoi a {
        color: #fff;
    }

        .duoi a:hover {
            color: peru;
        }
</style>

<h2>Create</h2>
<section class="toan">
    <h4>SANPHAM</h4>
    <hr />
    <div class="tbl-content">
