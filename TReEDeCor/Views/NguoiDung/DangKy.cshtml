<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    section-contact {
        position: relative;
        width: 100%;
        height: 100vh;
        display: flex;
    }

        section-contact .img-bg {
            position: relative;
            width: 100%;
            height: 100%;
            opacity: 0.7;
        }



            section-contact .img-bg img {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                overflow: hidden;
            }

        section-contact .noi-dung {
            display: flex;
            position: absolute;
            padding-left: 10%;
            width: 100%;
            height: 93%;
            color: white;
            background-color: black;
            opacity: 0.875;
        }

            section-contact .noi-dung .form {
                width: 100%;
            }


                section-contact .noi-dung .form h2 {
                    color: white;
                    font-weight: 500;
                    font-size: 2em;
                    text-transform: uppercase;
                    margin-bottom: 18px;
                    border-bottom: 3px solid peru;
                    display: inline-block;
                    letter-spacing: 1px;
                }

                section-contact .noi-dung .form .input-form {
                    margin-bottom: 20px;
                }


                    section-contact .noi-dung .form .input-form span {
                        font-size: 20px;
                        margin-bottom: 5px;
                        display: inline-block;
                        color: white;
                        letter-spacing: 1px;
                    }

                    section-contact .noi-dung .form .input-form input {
                        width: 100%;
                        padding: 10px 20px;
                        outline: none;
                        border-top: none;
                        border-right: none;
                        border-left: none;
                        font-size: 20px;
                        letter-spacing: 1px;
                        color: white;
                        background: transparent;
                    }

                        section-contact .noi-dung .form .input-form input[type="submit"] {
                            background: peru;
                            color: #fff;
                            outline: none;
                            border: none;
                            font-weight: 500;
                            cursor: pointer;
                            box-shadow: 0 1px 1px rgba(0,0,0,0.12), 0 2px 2px rgba(0,0,0,0.12), 0 4px 4px rgba(0,0,0,0.12), 0 8px 8px rgba(0,0,0,0.12), 0 16px 16px rgba(0,0,0,0.12);
                        }

                            section-contact .noi-dung .form .input-form input[type="submit"]:hover {
                                background: #000;
                            }

                section-contact .noi-dung .form .nho-dang-nhap {
                    margin-bottom: 10px;
                    color: #000;
                    font-size: 20px;
                }

                section-contact .noi-dung .form .input-form p {
                    color: white;
                }

                    section-contact .noi-dung .form .input-form p a {
                        color: peru;
                    }

                section-contact .noi-dung .form h3 {
                    color: #000;
                    text-align: center;
                    margin: 80px 0 10px;
                    font-weight: 500;
                }

                section-contact .noi-dung .form .icon-dang-nhap {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }

                    section-contact .noi-dung .form .icon-dang-nhap li {
                        list-style: none;
                        cursor: pointer;
                        width: 50px;
                        height: 50px;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                    }

                        section-contact .noi-dung .form .icon-dang-nhap li:nth-child(1) {
                            color: #3b5999;
                        }

                        section-contact .noi-dung .form .icon-dang-nhap li:nth-child(2) {
                            color: #dd4b39;
                        }

                        section-contact .noi-dung .form .icon-dang-nhap li:nth-child(3) {
                            color: #55acee;
                        }

                        section-contact .noi-dung .form .icon-dang-nhap li i {
                            font-size: 28px;
                        }
</style>
