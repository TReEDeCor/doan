@model IEnumerable<TReEDeCor.Models.SLIDER>

@{
    ViewBag.Title = "Isslider";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Isslider</h2>

<p>
    @Html.ActionLink("Create New", "Slider_Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LoaiSlider)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CapSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnhSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vitri)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Noidung1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Noidung2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Noidung3)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiSlider)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CapSP)
        </td>
        <td>
            <img src="@Url.Content("~/Image/Tinmain1/" + item.AnhSP)" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vitri)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Noidung1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Noidung2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Noidung3)
        </td>
        <td>
            @Html.ActionLink("Edit", "Slider_Edit", new { id=item.MaSlider }) |
            @Html.ActionLink("Details", "Slider_Details", new { id=item.MaSlider }) |
            @Html.ActionLink("Delete", "Slider_Delete", new { id=item.MaSlider })
        </td>
    </tr>
}

</table>
